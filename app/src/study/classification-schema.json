{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["models", "methods", "dataPath", "llm"],
  "properties": {
    "models": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1
    },
    "methods": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "rule-based",
          "llm-based", 
          "langchain-structured",
          "ollama-native",
          "instructor-ollama",
          "langchain-json-schema",
          "langchain-function-calling",
          "langchain-json-mode",
          "langchain-ollama-json-schema",
          "fewshot-langchain",
          "chatprompt-langchain",
          "outputparser-langchain",
          "outputfixing-langchain"
        ]
      },
      "minItems": 1
    },
    "dataPath": {
      "type": "string",
      "minLength": 1
    },
    "llm": {
      "type": "object",
      "required": ["baseUrl", "apiKey"],
      "properties": {
        "baseUrl": {
          "type": "string",
          "format": "uri"
        },
        "apiKey": {
          "type": "string",
          "minLength": 1
        },
        "temperature": {
          "type": "number",
          "minimum": 0,
          "maximum": 2
        },
        "timeout": {
          "type": "number",
          "minimum": 1000
        }
      }
    },
    "schemas": {
      "type": "object",
      "patternProperties": {
        "^[a-z-]+$": {
          "type": "object",
          "properties": {
            "schemaName": {
              "type": "string",
              "enum": ["minimal", "standard", "detailed", "optimized"]
            },
            "schemaSelectionCriteria": {
              "type": "object",
              "properties": {
                "use_case": {
                  "type": "string",
                  "enum": ["development", "testing", "production"]
                },
                "model_supports_function_calling": {
                  "type": "boolean"
                },
                "prioritize_accuracy": {
                  "type": "boolean"
                },
                "prioritize_speed": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    }
  }
}