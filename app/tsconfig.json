{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@qi/agent": ["../lib/src/agent"],
      "@qi/agent/*": ["../lib/src/*"],
      "@qi/base": ["../../qi-v2-qicore/typescript/lib/src/base"],
      "@qi/core": ["../../qi-v2-qicore/typescript/lib/src/core"]
    },
    "jsx": "react-jsx",
    "types": ["bun-types"]
  },
  "include": ["src/**/*", "../lib/src/**/*"],
  "typeRoots": ["./src/types", "./node_modules/@types"],
  "exclude": ["node_modules", "dist"]
}
