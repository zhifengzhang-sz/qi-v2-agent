{
  "agent": {
    "name": "qi-v2-agent",
    "version": "0.2.6",
    "environment": "development",
    "logLevel": "debug",
    "enableMetrics": true
  },
  "model": {
    "provider": "ollama",
    "baseUrl": "http://localhost:11434",
    "defaultModel": "qwen2.5:7b",
    "timeout": 60000,
    "retries": 3,
    "temperature": 0.7
  },
  "mcpServers": [
    {
      "name": "sequential-thinking",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-sequential-thinking"],
      "timeout": 30000,
      "requiredFor": ["planning"],
      "optionalFor": ["debugging", "information"],
      "retryable": true,
      "autoRestart": true
    },
    {
      "name": "filesystem",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem", "/workspace"],
      "timeout": 30000,
      "requiredFor": ["coding"],
      "optionalFor": ["debugging"],
      "retryable": true,
      "autoRestart": true
    },
    {
      "name": "web-search",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-brave-search"],
      "timeout": 30000,
      "optionalFor": ["information", "planning", "debugging"],
      "retryable": true,
      "autoRestart": true,
      "env": {
        "BRAVE_API_KEY": "your-brave-api-key"
      }
    },
    {
      "name": "git",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-git"],
      "timeout": 30000,
      "optionalFor": ["coding", "debugging"],
      "retryable": true,
      "autoRestart": true
    },
    {
      "name": "memory",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-memory"],
      "timeout": 30000,
      "optionalFor": ["planning", "coding", "information", "debugging", "generic"],
      "retryable": true,
      "autoRestart": true
    }
  ],
  "operational": {
    "rateLimits": {
      "toolCalls": {
        "maxRequests": 1000,
        "windowMs": 60000
      },
      "modelRequests": {
        "maxRequests": 500,
        "windowMs": 60000
      }
    },
    "timeouts": {
      "toolExecution": 60000,
      "modelGeneration": 120000,
      "workflowExecution": 180000
    },
    "retries": {
      "maxRetries": 3,
      "baseDelayMs": 1000,
      "maxDelayMs": 15000
    },
    "circuitBreaker": {
      "failureThreshold": 5,
      "openTimeoutMs": 60000
    },
    "costTracking": {
      "enabled": true,
      "maxEntries": 10000
    }
  },
  "detection": {
    "contextTracking": {
      "maxHistoryLength": 50,
      "sessionTimeout": 1800000
    },
    "patternMatching": {
      "minConfidence": 0.6,
      "enableContextBoost": true,
      "enableToolValidation": true
    }
  },
  "workflows": {
    "maxConcurrentWorkflows": 10,
    "defaultMode": "generic",
    "enableStreaming": true,
    "customSpecs": {
      "planning": {
        "mode": "planning",
        "tools": ["sequential-thinking", "web-search", "memory"],
        "modelConfig": {
          "temperature": 0.3,
          "systemPrompt": "You are in planning mode. Focus on systematic analysis and strategic thinking. Break down complex problems step-by-step.",
          "preferredModel": "qwen2.5:7b"
        }
      },
      "coding": {
        "mode": "coding",
        "tools": ["filesystem", "git", "memory"],
        "modelConfig": {
          "temperature": 0.5,
          "systemPrompt": "You are in coding mode. Write clean, efficient code. Follow existing patterns and conventions.",
          "preferredModel": "qwen2.5:7b"
        }
      }
    }
  }
}
