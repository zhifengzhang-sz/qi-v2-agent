{
  "agent": {
    "name": "qi-v2-agent",
    "version": "0.2.6",
    "environment": "production",
    "logLevel": "info",
    "enableMetrics": true
  },
  "model": {
    "provider": "ollama",
    "baseUrl": "http://localhost:11434",
    "defaultModel": "qwen2.5:14b",
    "timeout": 60000,
    "retries": 2,
    "temperature": 0.7
  },
  "mcpServers": [
    {
      "name": "sequential-thinking",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-sequential-thinking"],
      "timeout": 30000,
      "requiredFor": ["planning"],
      "optionalFor": ["debugging", "information"],
      "retryable": true,
      "autoRestart": true
    },
    {
      "name": "filesystem",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem", "/app/workspace"],
      "timeout": 30000,
      "requiredFor": ["coding"],
      "optionalFor": ["debugging"],
      "retryable": true,
      "autoRestart": true
    },
    {
      "name": "git",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-git"],
      "timeout": 30000,
      "optionalFor": ["coding", "debugging"],
      "retryable": true,
      "autoRestart": true
    },
    {
      "name": "memory",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-memory"],
      "timeout": 30000,
      "optionalFor": ["planning", "coding", "information", "debugging", "generic"],
      "retryable": true,
      "autoRestart": true
    }
  ],
  "operational": {
    "rateLimits": {
      "toolCalls": {
        "maxRequests": 100,
        "windowMs": 60000
      },
      "modelRequests": {
        "maxRequests": 50,
        "windowMs": 60000
      }
    },
    "timeouts": {
      "toolExecution": 30000,
      "modelGeneration": 60000,
      "workflowExecution": 120000
    },
    "retries": {
      "maxRetries": 2,
      "baseDelayMs": 1000,
      "maxDelayMs": 10000
    },
    "circuitBreaker": {
      "failureThreshold": 3,
      "openTimeoutMs": 30000
    },
    "costTracking": {
      "enabled": true,
      "maxEntries": 50000
    }
  },
  "detection": {
    "contextTracking": {
      "maxHistoryLength": 30,
      "sessionTimeout": 900000
    },
    "patternMatching": {
      "minConfidence": 0.7,
      "enableContextBoost": true,
      "enableToolValidation": true
    }
  },
  "workflows": {
    "maxConcurrentWorkflows": 5,
    "defaultMode": "generic",
    "enableStreaming": true
  }
}