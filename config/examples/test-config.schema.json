{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test Configuration Schema",
  "description": "Minimal test configuration schema",
  "type": "object",
  "properties": {
    "app": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Application name"
        },
        "version": {
          "type": "string",
          "description": "Application version"
        },
        "debug": {
          "type": "boolean",
          "description": "Debug mode"
        }
      },
      "required": ["name", "version"]
    },
    "model": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "string",
          "description": "Model provider"
        },
        "name": {
          "type": "string",
          "description": "Model name"
        },
        "temperature": {
          "type": "number",
          "description": "Temperature setting"
        },
        "baseUrl": {
          "type": "string",
          "description": "Base URL for API"
        },
        "thinkingEnabled": {
          "type": "boolean",
          "description": "Enable thinking"
        }
      },
      "required": ["provider", "name"]
    },
    "ui": {
      "type": "object",
      "properties": {
        "theme": {
          "type": "string",
          "description": "UI theme"
        },
        "showTimestamps": {
          "type": "boolean",
          "description": "Show timestamps"
        },
        "progressIndicators": {
          "type": "boolean",
          "description": "Show progress indicators"
        }
      }
    }
  },
  "required": ["app", "model"]
}