{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@qi/lib": ["./src"],
      "@qi/lib/*": ["./src/*"],
      "@qi/agent": ["./src/agent"],
      "@qi/agent/*": ["./src/*"],
      "@qi/prompt": ["./src/prompt"],
      "@qi/prompt/*": ["./src/prompt/*"],
      "@qi/cli": ["./src/cli"],
      "@qi/cli/*": ["./src/cli/*"],
      "@/*": ["./src/*"]
    },
    "types": ["bun-types", "react"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/context/schemas/**/*",
    "src/context/storage/**/*",
    "src/context/strategies/**/*"
  ]
}
